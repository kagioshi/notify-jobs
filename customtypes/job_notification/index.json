{
  "id": "job_notification",
  "label": "Job Notification",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": ""
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Job notification title"
        }
      },
      "short_summary": {
        "type": "StructuredText",
        "config": {
          "label": "Short Summary",
          "placeholder": "Brief summary of the job notification",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "body": {
        "type": "StructuredText",
        "config": {
          "label": "Body",
          "placeholder": "Full job notification content",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "published_date": {
        "type": "Date",
        "config": {
          "label": "Published Date",
          "placeholder": ""
        }
      },
      "last_date_to_apply": {
        "type": "Date",
        "config": {
          "label": "Last Date to Apply",
          "placeholder": ""
        }
      },
      "organization": {
        "type": "Text",
        "config": {
          "label": "Organization",
          "placeholder": "Hiring organization name"
        }
      },
      "location": {
        "type": "Text",
        "config": {
          "label": "Location",
          "placeholder": "Job location"
        }
      },
      "vacancies": {
        "type": "Number",
        "config": {
          "label": "Vacancies",
          "placeholder": "Number of vacancies"
        }
      },
      "apply_url": {
        "type": "Link",
        "config": {
          "label": "Apply URL",
          "placeholder": "Application link",
          "allowTargetBlank": true
        }
      },
      "pdf_attachment": {
        "type": "Link",
        "config": {
          "label": "PDF Attachment",
          "placeholder": "Job notification PDF",
          "select": "document"
        }
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "Category",
          "placeholder": "Select job category",
          "options": [
            "All India Govt Jobs",
            "State Govt Jobs", 
            "Bank Jobs",
            "Teaching Jobs",
            "Engineering Jobs",
            "Railway Jobs",
            "Police/Defence Jobs",
            "Education"
          ]
        }
      },
      "state": {
        "type": "Select",
        "config": {
          "label": "State",
          "placeholder": "Select state",
          "options": [
            "AP", "AS", "BR", "CG", "DL", "GJ", "HP", "HR", "JH", "KA",
            "KL", "MH", "MP", "OD", "PB", "RJ", "TN", "TS", "UK", "UP", "WB"
          ]
        }
      },
      "education_level": {
        "type": "Select",
        "config": {
          "label": "Education Level",
          "placeholder": "Required education",
          "options": [
            "8TH", "10TH", "12TH", "Diploma", "ITI", "B.Tech/B.E", 
            "B.Com", "Any Graduate", "Any Post Graduate"
          ]
        }
      },
      "is_featured": {
        "type": "Boolean",
        "config": {
          "label": "Is Featured",
          "placeholder_false": "Not Featured",
          "placeholder_true": "Featured",
          "default_value": false
        }
      },
      "ad_zone": {
        "type": "Text",
        "config": {
          "label": "Ad Zone",
          "placeholder": "Optional ad zone identifier"
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "SEO title for search engines"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "SEO description for search engines"
        }
      },
      "tags": {
        "type": "Group",
        "config": {
          "label": "Tags",
          "fields": {
            "tag": {
              "type": "Text",
              "config": {
                "label": "Tag",
                "placeholder": "Tag name"
              }
            }
          }
        }
      }
    }
  }
}