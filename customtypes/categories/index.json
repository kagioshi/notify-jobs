{
  "id": "categories",
  "label": "Categories",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": ""
        }
      },
      "name": {
        "type": "Text",
        "config": {
          "label": "Category Name",
          "placeholder": "Category name"
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "Category description",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "icon": {
        "type": "Text",
        "config": {
          "label": "Icon",
          "placeholder": "Lucide icon name (e.g., briefcase, graduation-cap)"
        }
      },
      "color": {
        "type": "Select",
        "config": {
          "label": "Color Theme",
          "options": ["tech", "healthcare", "finance", "education", "marketing", "design"]
        }
      },
      "is_primary": {
        "type": "Boolean",
        "config": {
          "label": "Is Primary Category",
          "placeholder_false": "Sub Category",
          "placeholder_true": "Primary Category",
          "default_value": false
        }
      },
      "sort_order": {
        "type": "Number",
        "config": {
          "label": "Sort Order",
          "placeholder": "Display order (lower number = higher priority)"
        }
      }
    },
    "SEO": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "SEO title for category page"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "SEO description for category page"
        }
      }
    }
  }
}